{% if title is not defined %}
    {% set title = 'CLIENTS' %}
{% endif %}
{% if subtitle is not defined %}
    {% set subtitle = 'Check out our' %}
{% endif %}
{% if imageUrl is not defined %}
    {% set imageUrl = '/assets/uploads/1588510581_heading-01.jpg' %}
{% endif %}

{% include '/template_1/_components/_heading_banner' with {'title': title,'subtitle': subtitle,'imageUrl': imageUrl} %}

<div class="row-full-width clearfix"></div>
<div class="row row-fluid  padding-lg-70t padding-lg-115b padding-sm-70b">
   <div class="column_container col-sm-12 ">
      <div class="column-inner ">
         <div>
            <div class="cs-client">
               {% for client in craft.entries.section('clients') %}
                  <div class="cs-client__item">
                     {% set image = client.clientLogo.first() %}
                     <img class="cs-client__logo" src="{{image.getUrl() }}"  alt="visit-site">
                     <div class="cs-client__overlay"></div>
                     <div class="cs-client__link-wrapp">
                        <a href="{{client.clientWebsite }}" class="cs-btn cs-btn--c-custom"  target="_blank" >VISIT SITE</a>
                     </div>
                  </div>
               {% endfor %}
            </div>
         </div>
      </div>
   </div>
</div>