{% if entry %}

    {% switch entry.type.handle %}
        {% case "columnBlocks" %}
            {% include '/template_2/_components/_columns' with {'column_block': entry} %}
        {% case "accordionBlocks" %}
            {% include '/template_2/_components/_accordions' with {'accordion_block': entry} %}
        {% case "messageBlocks" %}
            {% include '/template_2/_components/_messages' with {'message_block': entry} %}
        {% case "iconBlocks" %}
            {% include '/template_2/_components/_icon_boxes' with {'icon_block': entry} %}
        {% case "sliderBlocks" %}
            {% include '/template_2/_components/_sliders' with {'slider_block': entry} %}
        {% case "textBlocks" %}
            {% include '/template_2/_components/_text_blocks' with {'text_block': entry} %}
        {% case "imageBlocks" %}
            {% include '/template_2/_components/_image_blocks' with {'image_block': entry} %}
        {% case "processStepBlocks" %}
            {% include '/template_2/_components/_process_step_blocks' with {'process_step_block': entry} %}
        {% default %}
            {{ dd('block entry', entry.type.handle) }}
    {% endswitch %}

{% endif %}
