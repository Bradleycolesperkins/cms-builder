<!-- Testimonials Loop Start -->

{% if testimonial_block %}
    {% for block in testimonial_block.testimonialBlock.all() %}
        {% switch block.type %}

            {% case "fullPageTestimonalBackgroundSlider" %}
                {% include '/template_2/_components/_testimonial_blocks/_full_page_testimonal_background_slider' with { 'testimonial' : block} %}
            {% case "fullPageColouredBgTestimonalSlider" %}
                {% include '/template_2/_components/_testimonial_blocks/_full_page_coloured_background_testimonal_slider' with { 'testimonial' : block} %}
            {% case "standardTestimonialSlider" %}
                {% include '/template_2/_components/_testimonial_blocks/_standard_testimonial_slider' with { 'testimonial' : block} %}

            {% default %}
                {{ dd('_TESTIMONIALS', block.type) }}

        {% endswitch %}
    {% endfor %}
{% endif %}

<!-- Testimonials Loop End -->