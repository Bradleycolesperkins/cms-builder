<!-- Start Portfolio Details -->
<div class="brook-portfolio-details bg_color--1">
    <div class="container">
        <div class="row pt--100 pt_md--5 pt_sm--5 pb--80">
            <!-- Portfolio Left -->
            <div class="col-lg-4 col-12 order-1 order-lg-1 mt_md--40 mt_sm--40" id="is_stuck_inner">
                <div class="portfolio-left bk-portfolio-details">
                    <div class="portfolio-main-info">
                        <h3 class="heading heading-h3 line-height-1-42">{{entry.title}}</h3>
                        <div class="portfolio-content mt--75 mb--75 mt_md--40 mb_md--40 mt_sm--40 mb_sm--40">
                            <h6 class="heading heading-h6">{{entry.caseStudiesSubtitle}}</h6>
                            <div class="desc mt--20">
                                <p class="bk_pra">
                                    {{entry.caseStudiesBody}}
                                </p>
                            </div>
                        </div>
                        <!-- Start Details List -->
                        <div class="portfolio-details-list">
                            <div class="details-list">
                                <label>Date</label>
                                <span>{{entry.postDate|date('Y-m-d')}}</span>
                            </div>
                            <!--
                            <div class="details-list">
                                <label>Client</label>
                                <span>HighGrove Partners</span>
                            </div>
                            -->

                            <div class="details-list">
                                <label>Categories</label>
                                {% set entryTags = craft.tags.relatedTo(entry) %}
                                {% set tweakedEntryTags = [] %}
                                {% for tweakEntryTag in entryTags %}
                                    {% set tweakedEntryTags = tweakedEntryTags|merge([tweakEntryTag.title]) %}
                                {% endfor %}
                                {% for tag in tweakedEntryTags %}
                                    <span><a href="/Portfolio/Category/?q={{tag}}">{{ tag }}</a></span>
                                {% endfor %}

                            </div>
                            <!--
                            <div class="details-list">
                                <label>Awards</label>
                                <span>2018 Revolution Designs</span>
                            </div>
                            -->
                        </div>
                        <!-- End Details List -->
                        <!-- Start Portfolio Share -->
                        <!--
                        <div class="portfolio-share pt--70 pt_md--40 pt_sm--40">
                            <h6 class="heading heading-h6">SHARE</h6>
                        </div>
                        -->
                    </div>
                </div>
            </div>
            <!-- Portfolio Right -->
            <div class="col-lg-8 col-12 order-2 order-lg-2">
                <div class="portfolio-right portfolio-details-gallery text-center text-lg-right">

                    {% for image in entry.caseStudiesImages %}
                        <!-- Start Portfolio Image -->
                        <div class="portfolio-image mb--50">
                            <img src="{{image.getUrl()}}" alt="{{ image.imageAltTag  }}">
                        </div>
                        <!-- End Portfolio Image -->
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
    <div class="container bg_color--1">
        <div class="row">
            <div class="col-lg-12">
                <!-- Portfolio Nav List -->
                <div class="portfolio-nav-list pt--50 pb--150 pb_md--80 pb_sm--60 pt_md--5 pt_sm--5">
                    {# Set parameters for prev/next elements list #}
                    {% set params = craft.entries.section('blog').order('id asc') %}

                    {# Get the prev/next elements #}
                    {% set prevEntry = entry.getPrev(params) %}
                    {% set nextEntry = entry.getNext(params) %}

                    {# And make sure to only output the links if the element exists #}
                    {% if prevEntry %}
                        <div class="portfolio-page prev">
                            <div class="inner">
                                <a href="{{ prevEntry.url }}">
                                    <p>Prev</p>
                                    <h3 class="heading heading-h3">{{ prevEntry.title }}</h3>
                                </a>
                            </div>
                        </div>
                    {% endif %}
                    {% if nextEntry %}
                        <div class="portfolio-page next mt_sm--30">
                            <div class="inner">
                                <a href="{{ nextEntry.url }}">
                                    <p>Next</p>
                                    <h3 class="heading heading-h3">{{ nextEntry.title }}</h3>
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
                <!-- Portfolio Nav List -->
            </div>
        </div>
    </div>
</div>
<!-- End Portfolio Details -->