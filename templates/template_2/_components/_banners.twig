
{% if banner_block is defined %}
    {% for block in banner_block.bannerBlock.all() %}
        {% switch block.type %}

            {% case "fullWidthBackgroundWithOverlay" %}
                {% include '/template_2/_components/_banner_blocks/_full_width_background_with_overlay' with {'block': block} %}
            {% case "fullWidthBackgroundWithAnimation" %}
                {% include '/template_2/_components/_banner_blocks/_full_width_background_with_animation' with {'block': block} %}


            {% default %}
                {{ dd('BANNER BLOCK', block.type) }}
        {% endswitch %}
    {% endfor %}
{% endif %}
