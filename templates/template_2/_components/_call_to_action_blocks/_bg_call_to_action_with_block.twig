<!-- Start Call To Action -->
{% set image = block.callToActionBackground.first() %}
<div class="brook-call-to-action bg_image--61 ptb--120 ptb-md--80 ptb-sm--60" style="background-image:url({{image.getUrl() }})">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12 col-12">
                <div class="call-content vertical-call-toaction text-center essential-cta">
                    {% if block.callToActionTitle is not empty  %}
                        <h3 class="text-white wow move-up">{{block.callToActionTitle}}</h3>
                    {% endif %}
                    {% if block.callToActionSubtitle is not empty  %}
                        <p class="text-white wow move-up">{{block.callToActionSubtitle}}</p>
                    {% endif %}
                    <div class="spacing"></div>
                    {% if block.callToActionBlock %}
                        <div class="call-btn text-center wow move-up">
                            {% include '/template_2/_components/_blocks' with {'block':  block.callToActionBlock } %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Call To Action -->
