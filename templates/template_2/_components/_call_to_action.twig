
{% if call_to_action_block is defined %}
    {% for block in call_to_action_block.callToActionBlock.all() %}
        {% switch block.type %}

            {% case "plainCallToAction" %}
                {% include '/template_2/_components/_call_to_action_blocks/_plain_call_to_action' with {'block': block} %}
            {% case "plainCallToActionWithBlock" %}
                {% include '/template_2/_components/_call_to_action_blocks/_plain_call_to_action_with_block' with {'block': block} %}
            {% case "plainParallaxCallToAction" %}
                {% include '/template_2/_components/_call_to_action_blocks/_plain_parallax_call_to_action' with {'block': block} %}

            {# VETICAL CALL TO ACTIONS #}
            {% case "backgroundCallToAction" %}
                {% include '/template_2/_components/_call_to_action_blocks/_bg_call_to_action' with {'block': block} %}
            {% case "backgroundCallToActionWithBlock" %}
                {% include '/template_2/_components/_call_to_action_blocks/_bg_call_to_action_with_block' with {'block': block} %}
            {% case "backgroundParallaxCallToAction" %}
                {% include '/template_2/_components/_call_to_action_blocks/_bg_parallax_call_to_action' with {'block': block} %}


            {% default %}
            {{ dd('CALL TO ACTION', block.type) }}
{#                {% include '/template_2/_components/_call_to_action_blocks/_plain_call_to_action' with {'block': block} %}#}

        {% endswitch %}
    {% endfor %}
{% endif %}
