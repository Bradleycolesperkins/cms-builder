                              <div>
                                 <div class="cs-address  cs-address--simple">
                                    <div class="cs-address__item ">
                                       <span class="cs-address__item-icon fa fa-envelope-open"></span>
                                       <a href="mailto:{ companyInformation.companyEmailAddress }}" class="cs-address__item-link">
                                          <span class="__cf_email__">{{ companyInformation.companyEmailAddress }}</span>
                                       </a>
                                    </div>
                                    <div class="cs-address__item ">
                                       <span class="cs-address__item-icon fa fa-phone"></span>
                                       <a href="tel:+45(0)479253798" class="cs-address__item-link"  >{{ companyInformation.companyContactNumber }}</a>
                                    </div>
                                    {% if companySocialMedias.companyFacebook|length > 0 %}
                                       <div class="cs-address__item ">
                                          <a target="_blank" href="{{ companySocialMedias.companyFacebook }}">
                                             <p class="cs-address__item-text"><i class="fa fa-facebook"></i></p>
                                          </a>
                                       </div>
                                     {% endif %}
                                      {% if companySocialMedias.companyInstagram|length > 0 %}
                                          <div class="cs-address__item ">
                                             <a target="_blank" href="{{ companySocialMedias.companyInstagram }}">
                                                <p class="cs-address__item-text"><i class="fa fa-instagram"></i></p>
                                             </a>
                                          </div>
                                     {% endif %}
                                      {% if companySocialMedias.companyTwitter|length > 0 %}
                                          <div class="cs-address__item ">
                                             <a target="_blank" href="{{ companySocialMedias.companyTwitter }}">
                                                <p class="cs-address__item-text"><i class="fa fa-twitter"></i></p>
                                             </a>
                                          </div>
                                     {% endif %}
                                      {% if companySocialMedias.companyYoutube|length > 0 %}
                                          <div class="cs-address__item ">
                                             <a target="_blank" href="{{ companySocialMedias.companyYoutube }}">
                                                <p class="cs-address__item-text"><i class="fa fa-youtube"></i></p>
                                             </a>
                                          </div>
                                     {% endif %}
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
